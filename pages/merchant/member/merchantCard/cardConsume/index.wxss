/* pages/merchant/member/merchantCard/cardConsume/index.wxss */
page{
  width: 100%;
  background-color: #fff;
}
.useRecordWrap{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.useRecord{
  width: 95%;
}
.recordWrap{
  width: 100%;
  padding-bottom: 100rpx;
  background-color: #fafafa;
  border-radius: 30rpx;
  margin-top: 20rpx;
}
.record{
  width: 100%;
  height: 150rpx;
  display: flex;
  justify-content: space-between;
  align-content: center;
  box-sizing: border-box;
  padding: 10rpx;
  border-bottom: 1rpx solid #ddd;
}
.timerWrap{
  width: 80%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
 
}
.timerWrap_text{
  font-size: 36rpx;
  font-weight: 700;
}
.cardName{
  width: 100%;
  font-size: 36rpx;
  font-weight: bold;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  word-break: break-all;
}
.timer{
  font-size: 28rpx;
  color: #A9A9A9;
}
.surplusWrap{
  width: 20%;
  height: 100%;
  color: rgb(245, 10, 10);
  font-size: 28rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  text-align: right;
  box-sizing: border-box;
  padding: 30rpx 0;
}
/* æ—  */
.boxWrap{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.box{
  height: 500rpx;
  margin-top: 40%;
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #757575;
}
.icon-icon_wuxiaoxi-{
  font-size: 400rpx;
}