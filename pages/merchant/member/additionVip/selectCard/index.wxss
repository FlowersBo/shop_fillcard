/* pages/merchant/member/additionVip/selectCard/index.wxss */
page{
  width: 100%;
  background-color: #f2f2f2;
}
.meVipcardWrap{
  width: 100%;
}
.meVipcard{
  width: 100%;
}
.card{
  width: 100%;
  height: 350rpx;
  border-bottom: 1rpx solid #ddd;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  box-sizing: border-box;
  padding: 15rpx 0;
}
.card_center{
  width: 500rpx;
  height: 260rpx;
  position: relative;
}
.card_img{
  width: 100%;
  height: 100%;
  border-radius: 30rpx;   
}
.card_content{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 15rpx;
  color: rgb(15, 15, 15);
  border-radius: 30rpx;
}
.card_contentShow{
  background-color: rgba(77, 77, 77, 0.7);
}
.card_content_top{
  width: 100%;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  word-break: break-all;
  font-size: 28rpx;
}
.card_content_centent{
  width: 100%;
  text-align: center;
  font-size: 40rpx;
}
.card_content_bottom{
  width: 100%;
  text-align: right;
  font-size: 24rpx;
}
.box{
  height: 500rpx;
  margin-top: 40%;
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #757575;
}
.icon-icon_wuxiaoxi-{
  font-size: 400rpx;
}