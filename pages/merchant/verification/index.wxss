/* pages/index/merchant/verification/index.wxss */
page{
  width: 100%;
  background-color: #F2F2F2;
}
.verificationWrap{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.verification{
  width: 94%;
}
.cardsWrap{
  width: 100%;
  height: 240rpx;
  background-color: #fff;
  border-radius: 20rpx;
  margin-top: 30rpx;
  box-sizing: border-box;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  box-shadow: 6rpx 6rpx 15rpx #909090;
}
.cards_shop{
  width: 100%;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  word-break: break-all;
  font-size: 32rpx;
  font-weight: bold;
}
.cards_name{
  font-size: 28rpx;
}
.cards_moneyWrap{
  display: flex;
  font-size: 40rpx;
  font-weight: bold;
  color: #FD0000;
  justify-content: center;
}
.cards_period{
  font-size: 24rpx;
}
.verificationInp{
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 50rpx 0;
}
.inp{
  width: 60%;
  height: 100%;
  background-color: #DFDFDF;
  font-size: 32rpx;
  text-align: center;
  border-radius: 15rpx;
}
.verificationBtn{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.btn{
  width: 240rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background-color: #FB2726;
  color: #fafafa;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 20rpx;
}
button::after{
  border: none;
}

