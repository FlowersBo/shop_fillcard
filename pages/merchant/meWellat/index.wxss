/* pages/user/meWallet/index.wxss */
page{
  width: 100%;
  /* background-color: #e9e9e9; */
}
.meWalletWrap{
  width: 100%;
}
.meWallet{
  width: 100%;
}
.balanceWrap{
  width: 100%;
  height: 300rpx;
  background-color: #fff;
}
.balance_text{
  width: 100%;
  height: 120rpx;
  line-height: 120rpx;
  text-align: center;
  font-size: 40rpx;
  font-weight: 800;
  color: #eb1212;
  border-bottom: 2rpx solid #e9e9e9;
}
.withdrawWrap{
  width: 100%;
  height: 180rpx;
  display: flex;
  justify-content: space-around;
}
.withdraw{
  width: 33.3%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  border-bottom:  1rpx solid #e9e9e9;
  font-size: 32rpx;
  box-sizing: border-box;
  padding: 15rpx 0;
  border-right: 1rpx solid #e9e9e9;
  color: #600030;
}
.withdraw:last-child{
  border-right: none;
}
.ico{
  font-size: 80rpx;
}
.icon-yinhangqia{
  color:#ED6166;
}
.icon-tixian{
  color:#EB9818;
}
.icon-tixianjilu{
  color:rgb(102, 90, 73);
}
.particularsWrap{
  width: 100%;
}
.particulars{
  width: 100%;
  background-color: #fff;
  font-size: 24rpx;
  color: #AFAFAF;
}
.particularsItem{
  width: 100%;
  height: 150rpx;
  display: flex;
  flex-direction: row;
  border-bottom: 1rpx solid #ddd;
  box-sizing: border-box;
  padding: 15rpx 25rpx;
}
.item_left{
  flex: 1;
  width: 100%;
  height: 100%;
}
.itemWrap{
  display: flex;
  align-items: center;
}
.item_start{
  padding-right: 20rpx;
  font-size: 36rpx;
  color: rgb(22, 22, 22);
}
.item_details{
  padding-top: 20rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  word-break: break-all;
}
.money{
  width: 200rpx;
  height: 100%;
  line-height: 150rpx;
  text-align: right;
  font-size: 34rpx;
  color: #eb1212;
  font-weight: bold;
}
/* æ—  */
.boxWrap{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.box{
  height: 500rpx;
  margin-top: 30%;
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #757575;
}
.icon-icon_wuxiaoxi-{
  font-size: 400rpx;
}