/* pages/merchant/multipleCard/index.wxss */
page{
  background-color: rgb(235, 235, 235);
}
.multipleCardWrap{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.multipleCard{
  width: 97%;
}
.multipleCardDetail{
  width: 100%;
  background-color: #fff;
  border-radius: 20rpx;
  margin-top: 20rpx;
  box-sizing: border-box;
  padding: 20rpx;
  font-size: 32rpx;
}
.img{
  width: 100%;
  height: 350rpx;
}
.img image{
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
}
.multiple{
  width: 100%;
  margin: 10rpx 0;
  font-weight: bold;
}
.timer{
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  color: #646464;
  font-size: 28rpx;
}
.btnWrap{
  width: 100%;
  height: 120rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
  padding: 0 30rpx;
}
.btn{
  width: 150rpx;
  height: 50rpx;
  text-align: center;
  line-height: 50rpx;
  font-size: 28rpx;
  border: 1rpx solid #200;
  background-color: #FDE60C;
  border-radius: 10rpx;
}

/* 添加按钮 */
.bigBtnWrap{
  margin-top: 30rpx;
}
.bigBtn{
  width: 100%;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  font-size: 40rpx;
  background-color: #FDE60C;
  border-radius: 15rpx;
}

/* 说明 */
.explain{
  width: 100%;
  background-color: #fff;
  border-radius: 20rpx;
  margin-top: 30rpx;
  box-sizing: border-box;
  padding: 10rpx;
  font-size: 28rpx;
  color: #646464;
  line-height: 1.5;
  text-indent: 26rpx;
}
.title{
  text-indent: 0;
  font-size: 32rpx;
  font-weight: bold;
  color: #200;
  margin: 10rpx 0;
}
.illustrate{
  text-indent: 0;
  font-weight: bold;
  color: #200;
  margin: 5rpx 0;
}
.switch {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  height: 64rpx;
  border-radius: 64rpx;
  border: 1rpx solid rgb(122, 122, 122);
  background: #B9B9B9;
}
.switchNav{
  display: flex;
  align-items: center;
  justify-content: flex-end;
  height: 64rpx;
  border-radius: 64rpx;
  border: 1rpx solid rgb(230, 190, 13);
  background: #FFE500;
}

.switchNums {
  width: 110rpx;
  height: 64rpx;
  line-height: 64rpx;
  border-radius: 64rpx;
  text-align: center;
  color: #fff;
  font-size: 28rpx;
  font-weight: bold;
}

.nav{
  width: 63rpx;
  height:63rpx;
  background: #FFB200;
  color: #ffffff;
}

.currentNum {
  width: 63rpx;
  height:63rpx;
  background: #999999;
  color: #ffffff;
}
