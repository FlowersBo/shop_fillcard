.sellCard{
  width: 100%;
}
.additionWrap{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 20rpx;
}
.addition{
  width: 96%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 40rpx;
  border-radius: 10rpx;
  background-color: #FFE500;
}
.cardListWrap{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.cardList{
  width: 96%;
}

.cards{
  width: 100%;
  height: 250rpx;
  border-radius: 20rpx;
  background-color: #fff;
  margin-top: 20rpx;
}
.cards:last-child{
  margin-bottom: 20rpx;
}
.cardChild{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  box-sizing: border-box;
  padding: 0 10rpx;
}

.cardChild_particulars{
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  padding: 16rpx 0;
  display: flex;
  justify-content: space-between;
}
.cardChild_img{
  width: 43%;
  height: 100%;
  border-radius: 10rpx;
}
.contentWrap{
  width: 54%;
  height: 100%;
  display: flex;
  flex-direction: column;
  font-size: 24rpx;
  justify-content: space-between;
  color: #606060;
}

.caedTime{
  width: 100%;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  word-break: break-all;
  color:#F17841;
}
.cardsDetailsWrap{
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
