}

.residueDegreeWrap{
  display: flex;
  justify-content: space-between;
}
.periodValidity{
  font-size: 22rpx;
}
.price_text{
  text-decoration:line-through;
  font-size: 28rpx;
  color: rgb(245, 19, 19);
}
