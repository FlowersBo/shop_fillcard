.shopFromWrap{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.shopFrom{
  width: 92%;
}
.inpWrap{
  width: 100%;
  height: 201rpx;
  background-color: #fff;
  border-radius: 20rpx;
  box-shadow: 4rpx 4rpx 5px #888888;
}
.inpitem{
  width: 100%;
  height: 50%;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  padding: 0 20rpx;
  border-bottom: 1rpx solid #ddd;
}
.inpitem:last-child{
  border-bottom: none;
}
.ico{
  font-size: 50rpx;
  color: #ABAEB9;
}
.inp{
  width: 90%;
  height: 100%;
  box-sizing: border-box;
  padding-left: 20rpx;
}
.inp:first-child{
  border-bottom: 1rpx solid #ccc;
}
.verificationCode{
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  margin-top: 40rpx;
}
.verificationCode_inp{
  width: 60%;
  height: 100%;
  border-radius: 20rpx;
  background-color: #fff;
  text-indent: 10rpx;
  box-sizing: border-box;
  padding-left: 20rpx;
  box-shadow: 4rpx 4rpx 5px #888888;
}
.verificationCode_box{
  width: 30%;
  background-color: #fff;
  box-shadow: 4rpx 4rpx 5px #888888;
}
.img{
  width: 100%;
  height: 100%;
}
.register_btn{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 44rpx;
  margin-top: 20rpx;
  background-color: #FCD943;
}
.findPassword{
  width: 100%;
  height: 100rpx;
  font-size: 32rpx;
  color: #ABAEB9;
  line-height: 100rpx;
}