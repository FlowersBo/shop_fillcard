/* pages/index/index.wxss */
page{
  width: 100%;
  height: 100%;
  background-color: #f2f2f2;
}
.shopFillcardWrap{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: fixed;
  top: 20%;
}
.shopFillcard{
  width: 96%;
}
.logoWrap{
  width: 100%;
  height: 230rpx;
  display: flex;
  flex-direction: column;
  margin-bottom: 100rpx;
  position: relative;
  box-sizing: border-box;
  padding-left: 10rpx;
}
.logo{
  width: 100%;
  height: 100%;
}
.logo_img{
  width: 100%;
  height: 100%;
}
.logo_img image{
  width: 100%;
  height: 100%;
}
